{
  "name": "image-scraper-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "bootstrap": "bun install",
    "dev:web": "(cd apps/web && bun run dev)",
    "dev:server": "(cd apps/server && bun run dev)",
    "dev": "bun run dev:web & bun run dev:server"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.3",
    "postcss-lit": "^1.3.1",
    "typescript": "^5.9.3"
  }
}